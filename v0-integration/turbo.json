{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "NODE_ENV",
    "DATABASE_URL",
    "NEXTAUTH_SECRET",
    "OPENAI_API_KEY"
  ],
  "globalDependencies": ["tsconfig.json", ".env*"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["DATABASE_URL", "NEXTAUTH_SECRET", "NEXT_PUBLIC_*"],
      "outputs": [".next/**", "dist/**", ".vercel/output/**", "!.next/cache/**"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "lint": {
      "outputs": [],
      "cache": false
    },
    "test": {
      "outputs": [],
      "cache": false
    },
    "test:coverage": {
      "outputs": ["coverage/**"],
      "dependsOn": ["^build"]
    },
    "typecheck": {
      "outputs": [],
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "db:generate": {
      "cache": false,
      "outputs": ["node_modules/@prisma/client/**"]
    },
    "db:push": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    }
  },
  "remoteCache": {
    "enabled": true
  }
}
