# NeonHub Platform Environment Variables
# Copy this file to .env and fill in your actual values

# ================================
# DATABASE CONFIGURATION
# ================================
DATABASE_URL="postgresql://username:password@localhost:5432/neonhub_dev"
DATABASE_URL_PROD="postgresql://username:password@production-host:5432/neonhub_prod"

# ================================
# AI/LLM PROVIDERS
# ================================
OPENAI_API_KEY="sk-your-openai-api-key-here"
ANTHROPIC_API_KEY="sk-ant-your-anthropic-key-here"

# ================================
# AUTHENTICATION
# ================================
NEXTAUTH_SECRET="your-nextauth-secret-here-min-32-chars"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_URL_PROD="https://your-production-domain.com"

# ================================
# SOCIAL MEDIA INTEGRATIONS
# ================================
# Instagram
INSTAGRAM_CLIENT_ID="your-instagram-client-id"
INSTAGRAM_CLIENT_SECRET="your-instagram-client-secret"

# TikTok
TIKTOK_CLIENT_ID="your-tiktok-client-id"
TIKTOK_CLIENT_SECRET="your-tiktok-client-secret"

# Meta/Facebook
META_APP_ID="your-meta-app-id"
META_APP_SECRET="your-meta-app-secret"

# ================================
# EMAIL PROVIDERS
# ================================
# SendGrid
SENDGRID_API_KEY="SG.your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@yourdomain.com"

# Resend (Alternative)
RESEND_API_KEY="re_your-resend-api-key"

# ================================
# COMMUNICATION PROVIDERS
# ================================
# Twilio (WhatsApp)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_WHATSAPP_NUMBER="+14155238886"

# ================================
# E-COMMERCE INTEGRATIONS
# ================================
# Shopify
SHOPIFY_API_KEY="your-shopify-api-key"
SHOPIFY_API_SECRET="your-shopify-api-secret"
SHOPIFY_STORE_URL="your-store.myshopify.com"

# ================================
# CACHING & STORAGE
# ================================
REDIS_URL="redis://localhost:6379"
REDIS_URL_PROD="redis://production-redis-url:6379"

# ================================
# MONITORING & ANALYTICS
# ================================
# Vercel Analytics
VERCEL_ANALYTICS_ID="your-vercel-analytics-id"

# Posthog (Optional)
NEXT_PUBLIC_POSTHOG_KEY="your-posthog-key"

# ================================
# TURBOREPO CONFIGURATION
# ================================
TURBO_TOKEN="your-turborepo-token"
TURBO_TEAM="your-team-slug"

# ================================
# DEVELOPMENT SETTINGS
# ================================
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3001"

# ================================
# BUDGET & COST TRACKING
# ================================
MONTHLY_BUDGET_LIMIT="1000"
COST_ALERT_THRESHOLD="800"

# ================================
# AGENT CONFIGURATION
# ================================
# Max tokens for AI responses
MAX_TOKENS="4000"
AGENT_TEMPERATURE="0.7"

# Agent execution limits
MAX_CONCURRENT_AGENTS="5"
AGENT_TIMEOUT_MINUTES="10"

# ================================
# SECURITY SETTINGS
# ================================
# CORS Origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# API Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# ================================
# FEATURE FLAGS
# ================================
ENABLE_ANALYTICS="true"
ENABLE_BUDGET_TRACKING="true"
ENABLE_WHATSAPP_AGENT="true"
ENABLE_SOCIAL_AGENTS="true"
ENABLE_EMAIL_CAMPAIGNS="true" 