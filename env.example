# NeonHub Platform Environment Variables
# Copy this file to .env and fill in your actual values

# ================================
# DATABASE CONFIGURATION
# ================================
DATABASE_URL="postgresql://username:password@localhost:5432/neonhub_dev"
DATABASE_URL_PROD="postgresql://username:password@production-host:5432/neonhub_prod"

# ================================
# AI/LLM PROVIDERS
# ================================
# OpenAI (REQUIRED for AI agents)
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_ORG_ID="org-your-organization-id"

# Anthropic Claude (Optional alternative)
ANTHROPIC_API_KEY="sk-ant-your-anthropic-key-here"

# AI Image Generation (Optional - DALL-E, Midjourney, Stable Diffusion)
AI_IMAGE_API_ENDPOINT="https://api.openai.com/v1/images/generations"

# ================================
# VOICE & SPEECH SERVICES
# ================================
# Deepgram (Speech-to-text)
DEEPGRAM_API_KEY="your-deepgram-api-key"

# Azure Speech Services
AZURE_SPEECH_KEY="your-azure-speech-key"

# Google Speech-to-Text
GOOGLE_SPEECH_KEY="your-google-speech-key"

# ================================
# AUTHENTICATION
# ================================
NEXTAUTH_SECRET="your-super-secure-secret-key-here"  # Generate with: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_URL_PROD="https://your-production-domain.com"

# ================================
# SOCIAL MEDIA INTEGRATIONS
# ================================
# Instagram Business API
INSTAGRAM_CLIENT_ID="your-instagram-client-id"
INSTAGRAM_CLIENT_SECRET="your-instagram-client-secret"
INSTAGRAM_ACCESS_TOKEN="your-instagram-access-token"  # Long-lived access token

# TikTok for Business
TIKTOK_CLIENT_ID="your-tiktok-client-id"
TIKTOK_CLIENT_SECRET="your-tiktok-client-secret"
TIKTOK_API_KEY="your-tiktok-api-key"

# Meta/Facebook (Pages & Ads)
META_APP_ID="your-meta-app-id"
META_APP_SECRET="your-meta-app-secret"
FACEBOOK_APP_ID="your-facebook-app-id"  # Legacy compatibility
FB_ACCESS_TOKEN="your-facebook-access-token"  # Page access token
FACEBOOK_ACCESS_TOKEN="your-facebook-access-token"  # Alternative naming

# Twitter/X API
TWITTER_API_KEY="your-twitter-api-key"
TWITTER_API_SECRET="your-twitter-api-secret"
TWITTER_ACCESS_TOKEN="your-twitter-access-token"

# ================================
# EMAIL PROVIDERS
# ================================
# SendGrid (Primary email service)
SENDGRID_API_KEY="SG.your-sendgrid-api-key"  # Requires Mail Send permissions
SENDGRID_FROM_EMAIL="noreply@yourdomain.com"
SENDGRID_FROM_NAME="NeonHub Platform"

# SendGrid Templates (Optional)
SENDGRID_WELCOME_TEMPLATE_ID="d-welcome-template-id"
SENDGRID_ALERT_TEMPLATE_ID="d-alert-template-id"
SENDGRID_NOTIFICATION_TEMPLATE_ID="d-notification-template-id"

# Resend (Alternative email service)
RESEND_API_KEY="re_your-resend-api-key"

# ================================
# COMMUNICATION PROVIDERS
# ================================
# Twilio (SMS & WhatsApp)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"  # From Twilio Console
TWILIO_AUTH_TOKEN="your-twilio-auth-token"    # Keep this secret!
TWILIO_PHONE_NUMBER="+1234567890"             # Your Twilio phone number
TWILIO_WHATSAPP_NUMBER="+14155238886"         # WhatsApp Business number

# ================================
# PAYMENT & BILLING
# ================================
# Stripe (Payment processing)
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"     # Keep this secret!
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-public-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"      # For webhook verification

# Billing API Configuration
BILLING_API_URL="http://localhost:3001/api/trpc"
ALLOW_BUDGET_OVERRIDE="false"                          # Allow bypassing budget limits
MAX_MONTHLY_BUDGET="1000"                              # Maximum monthly spend limit

# ================================
# E-COMMERCE INTEGRATIONS
# ================================
# Shopify
SHOPIFY_API_KEY="your-shopify-api-key"
SHOPIFY_API_SECRET="your-shopify-api-secret"
SHOPIFY_STORE_URL="your-store.myshopify.com"

# ================================
# CACHING & STORAGE
# ================================
REDIS_URL="redis://localhost:6379"
REDIS_URL_PROD="redis://production-redis-url:6379"

# ================================
# MONITORING & ANALYTICS
# ================================
# Vercel Analytics
VERCEL_ANALYTICS_ID="your-vercel-analytics-id"

# PostHog (User analytics)
NEXT_PUBLIC_POSTHOG_KEY="your-posthog-key"
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# Sentry (Error tracking)
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"  # Error reporting endpoint
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="neonhub"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"                 # For releases and source maps

# ================================
# DEPLOYMENT & CI/CD
# ================================
# Vercel Deployment
VERCEL_TOKEN="your-vercel-token"                           # For CLI deployments
VERCEL_ORG_ID="your-vercel-org-id"
VERCEL_PROJECT_ID="your-vercel-project-id"
VERCEL_URL="your-deployment-url.vercel.app"               # Auto-populated by Vercel
VERCEL_GIT_COMMIT_SHA="commit-hash"                       # Auto-populated by Vercel
VERCEL_REGION="iad1"                                       # Auto-populated by Vercel

# Turborepo Remote Caching
TURBO_TOKEN="your-turborepo-token"
TURBO_TEAM="your-team-slug"

# ================================
# DEVELOPMENT SETTINGS
# ================================
NODE_ENV="development"
API_PORT="3001"                                            # API server port
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3001"

# ================================
# BUDGET & COST TRACKING
# ================================
MONTHLY_BUDGET_LIMIT="1000"                               # Monthly budget limit in USD
COST_ALERT_THRESHOLD="800"                                # Alert when reaching this amount

# ================================
# AGENT CONFIGURATION
# ================================
# AI Agent Settings
MAX_TOKENS="4000"                                         # Maximum tokens per AI request
AGENT_TEMPERATURE="0.7"                                   # AI creativity level (0-2)

# Agent Execution Limits
MAX_CONCURRENT_AGENTS="5"                                 # Maximum agents running simultaneously
AGENT_TIMEOUT_MINUTES="10"                               # Timeout for agent execution

# ================================
# SECURITY SETTINGS
# ================================
# CORS Origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# API Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"                            # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS="100"                            # Max requests per window

# ================================
# FEATURE FLAGS
# ================================
ENABLE_ANALYTICS="true"                                   # Enable analytics tracking
ENABLE_BUDGET_TRACKING="true"                            # Enable cost monitoring
ENABLE_WHATSAPP_AGENT="true"                             # Enable WhatsApp integration
ENABLE_SOCIAL_AGENTS="true"                              # Enable social media agents
ENABLE_EMAIL_CAMPAIGNS="true"                            # Enable email marketing

# ================================
# LOGGING & DEBUGGING
# ================================
DEBUG="false"                                             # Enable debug logging
VERBOSE_LOGGING="false"                                   # Enable verbose agent logs 